  <status value="draft" />
  <kind value="operation" />
  <date value="2020-06-26" />
  <publisher value="NCPDP" />
  <description value="Operation returning FHIR resources fulfilling one or more submitted queries" />
  <jurisdiction>
    <coding>
      <system value="urn:iso:std:iso:3166" />
      <code value="US" />
      <display value="United States of America" />
    </coding>
  </jurisdiction>
  <code value="specialty-rx-query-data" />
  <system value="true" />
  <type value="false" />
  <instance value="false" />
  <parameter>
    <name value="query-string" />
    <use value="in" />
    <min value="1" />
    <max value="*" />
    <documentation value="A FHIR query string in the form [resource type]?patient=[patient ref]. (e.g., “Condition?patient=specialty-rx-patient-1”)" />
    <type value="string" />
  </parameter>
  <parameter>
    <name value="requester-patient-in" />
    <use value="in" />
    <min value="1" />
    <max value="1" />
    <documentation value="The requester's Patient resource representing the individual that is to be the *QuestionnaireResponse.subject*" />
    <type value="Reference" />
    <targetProfile value="http://hl7.org/fhir/us/ncpdp/StructureDefinition/specialty-rx-patient" />
  </parameter>
  <parameter>
    <name value="responder-patient-in" />
    <use value="in" />
    <min value="0" />
    <max value="1" />
    <documentation value="The responder's Patient resource representing the individual for whom the Questionnaire has been completed. The returned QuestionnaireResponse instance will reference this Patient in QuestionnaireResponse.subject" />
    <type value="Reference" />
    <targetProfile value="http://hl7.org/fhir/us/ncpdp/StructureDefinition/specialty-rx-patient" />
  </parameter>
  <parameter>
    <name value="medication-request" />
    <use value="in" />
    <min value="0" />
    <max value="1" />
    <documentation value="The MedicationRequest to which this request relates" />
    <type value="Reference" />
    <targetProfile value="http://hl7.org/fhir/us/ncpdp/StructureDefinition/specialty-rx-medicationrequest" />
  </parameter>
  <parameter>
    <name value="pharmacy" />
    <use value="in" />
    <min value="0" />
    <max value="1" />
