    <type value="Reference" />
    <targetProfile value="http://hl7.org/fhir/us/ncpdp/StructureDefinition/specialty-rx-pharmacy-organization" />
  </parameter>
  <parameter>
    <name value="prescriber" />
    <use value="in" />
    <min value="0" />
    <max value="1" />
    <documentation value="The prescribing practitioner referenced in the prescription" />
    <type value="Reference" />
    <targetProfile value="http://hl7.org/fhir/us/ncpdp/StructureDefinition/specialty-rx-practitioner" />
  </parameter>
  <parameter>
    <name value="responder-patient-out" />
    <use value="out" />
    <min value="1" />
    <max value="1" />
    <documentation value="The responder’s patient referenced as the QuestionnaireResponse.subject" />
    <type value="Reference" />
    <targetProfile value="http://hl7.org/fhir/us/ncpdp/StructureDefinition/specialty-rx-patient" />
  </parameter>
  <parameter>
    <name value="query-results" />
    <use value="out" />
    <min value="1" />
    <max value="1" />
    <documentation value="The populated set of answers for the specified Questionnaire" />
    <type value="Reference" />
    <targetProfile value="http://hl7.org/fhir/StructureDefinition/Bundle" />
  </parameter>
